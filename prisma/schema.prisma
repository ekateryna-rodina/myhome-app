generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id                  Int          @id @default(autoincrement())
  title               String
  beds                Int
  baths               Int          @default(1)
  size                Int
  photo               String
  for                 ServiceType  @default(RENT)
  locationId          Int          @default(1)
  location            Location     @relation(fields: [locationId], references: [id])
  price               Int          @default(2000)
  type                PropertyType @default(House)
  isPetsFriendly      Boolean      @default(true)
  isFurnished         Boolean      @default(true)
  isParkingAccessible Boolean      @default(true)
  isWithKitchen       Boolean      @default(true)
  isWithAirCondition  Boolean      @default(true)
  isWithLaundry       Boolean      @default(true)
  isWithBabyBed       Boolean      @default(false)
  isNearbyBeach       Boolean      @default(false)
  isWithOfficeZone    Boolean      @default(false)
  isWithSmokingZone   Boolean      @default(false)
  isWithWiFi          Boolean      @default(true)
  isWithBreakfast     Boolean      @default(false)
  isWithFireplace     Boolean      @default(false)
}

model Location {
  id         Int        @id @default(autoincrement())
  city       String
  country    String
  zip        String     @default("")
  properties Property[]
}

enum ServiceType {
  RENT
  BUY
}

enum PropertyType {
  Apartment
  House
  Office
  Landplot
}
