generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id         Int         @id @default(autoincrement())
  title      String
  beds       Int
  baths      String
  size       Int
  photo      String
  for        ServiceType @default(RENT)
  locationId Int         @default(1)
  location   Location    @relation(fields: [locationId], references: [id])
}

model Location {
  id         Int        @id @default(autoincrement())
  city       String
  country    String
  zip        String     @default("")
  properties Property[]
}

enum ServiceType {
  RENT
  BUY
}
